<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalcButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="CalcButton.Dark" parent="CalcButton">
        <item name="backgroundTint">@color/button_dark</item>
        <item name="android:textColor">@color/text_on_dark</item>
    </style>

    <style name="CalcButton.Gray" parent="CalcButton">
        <item name="backgroundTint">@color/button_gray</item>
        <item name="android:textColor">@color/text_on_gray</item>
    </style>

    <style name="CalcButton.Orange" parent="CalcButton">
        <item name="backgroundTint">@color/button_orange</item>
        <item name="android:textColor">@color/text_on_orange</item>
    </style>
</resources>